public class Piece {//base object that all placeable things inherit from
	private int posX;
	private int posY;
	private String name;
      //private boolean available; //should we have a variable to keep track of whether the piece is "alive"?
      			       //also, should these variables be "protected" rather than "private"? or would it work as intended nonetheless?
			       //to handle the pieces "dying" we could make a function (called "attack" or something) that when it executes, it sets the "alive" variable of the defending piece to false.
			   

	
	public String toString(){
		return name + " at " + posX +","+posY;
	}
	
	Piece (int x, int y,String n){
	posX = x;
	posY = y;
	name = n;
	}

	public int getX(){
		return posX;
	}
	
	public int getY(){
		return posY;
	}
	
	public String getName(){
		return name;
	}

	public void setX(int x){
		posX = x;
	}
	
	public void setY(int y){
		posY = y;
	}
	
	public void moveUnit(int x, int y){
		setX(x);
		setY(y);
	}
	
	public boolean isAvailable(){ //could use this when drawing the board to look at which pieces need to be drawn?
		return available;
	}
}






//should we pull these out of this document and put them each into their own?
public class King extends Piece {


	King(int x, int y){
		super(x, y, "King");
		
	}

		
}

public class Queen extends Piece {

	Queen(int x, int y){
		super(x, y, "Queen");
	}
	
}

public class Rook extends Piece {
}

public class Bishop extends Piece {
}

public class Knight extends Piece {
}

public class Pawn extends Piece {
}
